  "BTC",
  "ETH",
  "USDT",
  "USDC",
  "DAI",
  "UXD",
  "USDP",
  "WLD",
  "BNB",
  "SOL",
  "XRP",
  "ADA",
  "AVAX",
  "DOGE",
  "TRX",
  "LINK",
  "DOT",
  "MATIC",
  "SHIB",
  "LTC",
  "BCH",
  "EOS",
  "XLM",
  "FTM",
  "AAVE",
  "UNI",
  "ALGO",
  "BAT",
  "PAXG",
  "CAKE",
  "AXS",
  "SLP",
  "MANA",
  "SAND",
  "CHZ",
].sort();

const fiatCurrencies = [
  "ARS",
  "BRL",
  "CLP",
  "COP",
  "MXN",
  "PEN",
  "VES",
  "BOB",
  "UYU",
  "DOP",
  "PYG",
  "USD",
  "EUR",
].sort();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crypto Dash Pro üöÄ</title>
  </head>
  <body
    class="bg-slate-900 min-h-screen flex items-center justify-center p-4 text-slate-200 font-sans"
  >
    <div
      class="w-full max-w-lg bg-slate-800/40 backdrop-blur-xl border border-slate-700/50 p-6 md:p-10 rounded-[2.5rem] shadow-2xl"
    >
      <header class="text-center mb-8">
        <h1
          class="text-3xl md:text-4xl font-black text-white tracking-tighter mb-2"
        >
          Crypto <span class="text-orange-500">Dash</span> üöÄ
        </h1>
        <p class="text-slate-400 text-sm">
          Panel de consulta din√°mica para n8n
        </p>
      </header>

      <form id="cryptoForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex flex-col">
          <label
            class="text-[10px] font-black text-orange-500 uppercase tracking-[0.2em] mb-2 ml-1"
            >Cripto a operar</label
          >
          <select
            name="coin"
            class="bg-slate-900/80 border-2 border-slate-700 rounded-2xl p-4 focus:border-orange-500 focus:ring-0 transition-all outline-none appearance-none cursor-pointer text-white"
          >
            {cryptoCoins.map((coin) => <option value={coin}>{coin}</option>)}
          </select>
        </div>

        <div class="flex flex-col">
          <label
            class="text-[10px] font-black text-orange-500 uppercase tracking-[0.2em] mb-2 ml-1"
            >Moneda Fiat / Stable</label
          >
          <select
            name="fiat"
            class="bg-slate-900/80 border-2 border-slate-700 rounded-2xl p-4 focus:border-orange-500 focus:ring-0 transition-all outline-none appearance-none cursor-pointer text-white"
          >
            {
              fiatCurrencies.map((fiat) => (
                <option value={fiat} selected={fiat === "PEN"}>
                  {fiat}
                </option>
              ))
            }
          </select>
        </div>

        <div class="flex flex-col md:col-span-2">
          <label
            class="text-[10px] font-black text-orange-500 uppercase tracking-[0.2em] mb-2 ml-1"
            >Volumen (Punto para decimales)</label
          >
          <input
            type="number"
            name="volumen"
            step="0.000001"
            value="0.1"
            placeholder="Ej: 0.1"
            class="bg-slate-900/80 border-2 border-slate-700 rounded-2xl p-4 focus:border-orange-500 focus:ring-0 transition-all outline-none text-white"
          />
        </div>

        <button
          type="submit"
          class="md:col-span-2 w-full bg-gradient-to-r from-orange-600 to-orange-500 hover:from-orange-500 hover:to-orange-400 text-white font-black py-5 rounded-2xl shadow-xl shadow-orange-900/20 transform active:scale-[0.97] transition-all uppercase tracking-widest text-sm"
        >
          Consultar en n8n
        </button>
      </form>

      <div
        id="status"
        class="mt-8 p-4 rounded-2xl text-center text-xs font-bold hidden border transition-all animate-pulse"
      >
      </div>
    </div>

    <script>
      const form = document.getElementById("cryptoForm") as HTMLFormElement;
      const status = document.getElementById("status");
      const WEBHOOK_URL =
        "https://epimeric-cleansable-miah.ngrok-free.dev/webhook/cotizacion-crypto";

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);

        if (status) {
          status.className =
            "mt-8 p-4 rounded-2xl text-center text-xs font-bold block border bg-orange-500/10 text-orange-400 border-orange-500/30";
          status.innerText = "‚è≥ ENVIANDO DATOS AL WORKFLOW...";
        }

        try {
          const response = await fetch(WEBHOOK_URL, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });

          if (response.ok && status) {
            status.className =
              "mt-8 p-4 rounded-2xl text-center text-xs font-bold block border bg-green-500/10 text-green-400 border-green-500/30";
            status.innerText = "‚úÖ ¬°RECIBIDO! REVISA TU TELEGRAM";
          } else {
            throw new Error();
          }
        } catch (err) {
          if (status) {
            status.className =
              "mt-8 p-4 rounded-2xl text-center text-xs font-bold block border bg-red-500/10 text-red-400 border-red-500/30";
            status.innerText = "‚ùå ERROR: REVISA LA CONEXI√ìN O CORS";
          }
        }
      });
    </script>
  </body>
</html>
